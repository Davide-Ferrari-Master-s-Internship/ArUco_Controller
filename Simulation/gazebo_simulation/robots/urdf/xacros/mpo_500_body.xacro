<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mpo_500">

  <xacro:macro name="mpo_500_base" params="name">
    <link name="${name}">
      <inertial>
        <mass value="80"/>
        <origin xyz="0 0.0 0.0" />
         <inertia ixx="2.8" ixy="0.0" ixz="0.0"
                 iyy="2.8" iyz="0.0" 
                 izz="2.8" />
      </inertial>
      <visual>
        <origin xyz="0. 0. 0" rpy="-1.571 0 1.571" />
        <geometry>
            <mesh filename="package://gazebo_simulation/robots/meshes/MPO-500-BODY.dae" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0. 0. 0.0" rpy="-1.571 0 1.571" />
        <geometry>
          <!--<box size="0.68 0.41 0.25"/> -->
           <mesh filename="package://gazebo_simulation/robots/meshes/MPO-500-BODY.dae" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>

  </xacro:macro>
  
</robot>
